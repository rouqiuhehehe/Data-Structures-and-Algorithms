{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "ES5",
      "diagnostics": true,
      "outDir": "./dist",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "declaration": true,
      "declarationDir": "./dist/type"
    },
    "include": ["./*/src/*", "./*/index.ts"]
}